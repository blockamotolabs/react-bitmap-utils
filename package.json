{
  "name": "@bitmapland/react-bitmap-utils",
  "version": "0.0.0",
  "description": "Utilities for drawing Bitmap Theory related imaging to HTML5 canvas with React",
  "main": "build/cjs/index.js",
  "module": "build/esm/index.js",
  "scripts": {
    "dev": "concurrently -n 'watch ,serve ,reload' -c 'yellow,cyan,green' \"npm run serve\" \"npm run watch\" \"npm run reload\"",
    "serve": "http-server -p 8080 -c-1 examples",
    "watch": "rm -rf build && mkdir -p examples/build && watchify ./examples/src/index.tsx --debug -t [ aliasify ] -t [ babelify --presets [ @babel/preset-env ] ] -p [ tsify --project examples/tsconfig.json ] -o examples/build/index.js",
    "reload": "livereload -e 'html,css,js' ./examples/",
    "build": "rm -rf build && tsc --project tsconfig.esm.json && tsc --project tsconfig.cjs.json",
    "format": "prettier --write '**/*'",
    "format-check": "prettier --check '**/*'",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "lint": "eslint '**/*.{js,ts,tsx}'",
    "tests": "jest --runInBand --coverage --passWithNoTests",
    "test": "npm run typecheck && npm run format-check && npm run lint && npm run tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bitmapland/react-bitmap-utils.git"
  },
  "keywords": [
    "bitmap",
    "theory",
    "react",
    "utils",
    "bitcoin",
    "btc",
    "bitmapland",
    "bitmapdev"
  ],
  "author": "Bitmap Dev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bitmapland/react-bitmap-utils/issues"
  },
  "homepage": "https://github.com/bitmapland/react-bitmap-utils#readme",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-reconciler": "^0.28.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@types/react-reconciler": "^0.28.8",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "aliasify": "^2.1.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "aliasify": {
    "aliases": {
      "@bitmapland/react-bitmap-utils": "./src/index.ts"
    },
    "appliesTo": {
      "includeExtensions": [
        ".ts",
        ".tsx"
      ]
    }
  }
}
